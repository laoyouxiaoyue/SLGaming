                }
              }
            }
          },
          "401": {
            "description": "用户名或密码错误",
            "schema": {
              "$ref": "#/definitions/BaseResp"
            },
            "examples": {
              "application/json": {
                "code": 401,
                "msg": "用户名或密码错误"
              }
            }
          },
          "500": {
            "description": "服务器错误",
            "schema": {
              "$ref": "#/definitions/BaseResp"
            },
            "examples": {
              "application/json": {
                "code": 500,
                "msg": "登录失败"
              }
