            "type": "integer",
            "format": "int64",
            "description": "用户ID"
          },
          {
            "name": "uid",
            "in": "query",
            "type": "integer",
            "format": "int64",
            "description": "用户UID"
          },
          {
            "name": "phone",
            "in": "query",
            "type": "string",
            "description": "手机号"
