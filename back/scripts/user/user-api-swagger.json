          },
          "401": {
            "description": "未授权，需要登录",
            "schema": {
              "$ref": "#/definitions/BaseResp"
            },
            "examples": {
              "application/json": {
                "code": 401,
                "msg": "未授权"
              }
            }
          },
          "404": {
            "description": "用户不存在",
            "schema": {
              "$ref": "#/definitions/BaseResp"
            },
            "examples": {
              "application/json": {
                "code": 404,
                "msg": "用户不存在"
