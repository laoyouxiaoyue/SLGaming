    "/user/companions": {
      "get": {
        "tags": ["陪玩信息"],
        "summary": "获取陪玩列表",
        "description": "获取陪玩列表（公开接口，用于订单匹配）。支持多种筛选条件：游戏技能、价格区间、在线状态、认证状态等。返回结果包含陪玩的个人信息（头像、简介）和陪玩信息（技能、价格、评分等）。",
        "operationId": "getCompanionList",
        "parameters": [
          {
            "name": "gameSkills",
            "in": "query",
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi",
            "description": "游戏技能筛选（可传多个，如：gameSkills=王者荣耀&gameSkills=和平精英）",
            "example": ["王者荣耀", "和平精英"]
          },
          {
            "name": "minPrice",
            "in": "query",
            "type": "integer",
            "format": "int64",
            "description": "最低价格（帅币/小时）",
            "minimum": 0,
            "example": 10
          },
          {
            "name": "maxPrice",
            "in": "query",
            "type": "integer",
            "format": "int64",
            "description": "最高价格（帅币/小时）",
            "minimum": 0,
            "example": 100
          },
          {
            "name": "status",
            "in": "query",
            "type": "integer",
            "description": "状态筛选：0=离线, 1=在线, 2=忙碌（默认1）",
            "enum": [0, 1, 2],
            "default": 1
          },
          {
            "name": "isVerified",
            "in": "query",
            "type": "boolean",
            "description": "是否只返回认证陪玩"
          },
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "description": "页码（从1开始）",
            "minimum": 1,
            "default": 1,
            "example": 1
          },
          {
            "name": "pageSize",
            "in": "query",
            "type": "integer",
            "description": "每页数量（默认20）",
